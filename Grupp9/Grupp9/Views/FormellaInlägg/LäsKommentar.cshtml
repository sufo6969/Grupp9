@model Grupp9.Models.ListaKommenterare 

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@if (Model.listan != null) {
<table class="table">
    <tr>
        <th>
            Kommentar
        </th>
        <th>
            Id
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.listan)
    {
        
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.kommentarText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.bloggId)
            </td>
            <td>
                 @Html.ActionLink("Radera", "Delete", new { IDet = item.kommentarID });

            </td>
        </tr>

    }
</table>
}





