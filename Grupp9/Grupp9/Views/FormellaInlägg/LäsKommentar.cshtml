@model Grupp9.Models.ListaKommenterare 

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@if (Model.listan != null) {
<table class="table">
    <tr>
        <th>
            Kommentar
        </th>
        <th>
            Id
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.listan)
    {
        
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.kommentarText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.bloggId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.userID)
                <p>Text som syns</p>
                @{ var ärinloggad = Html.Action("Vemsomskrivit", "FormellaInlägg", new { userID = item.userID }).ToString();

                    if (ärinloggad == "true")
                    { @Html.ActionLink("Radera", "Delete", new { IDet = item.kommentarID });}

                }

            </td>
        </tr>

    }
</table>
}





