@model Grupp9.Models.ProfilViewModel
@{
    ViewBag.Title = "Manage";
}

<h2>@ViewBag.Title.</h2>


<div>
    <h4>Ändra dina kontoinställningar!</h4>
    <hr />

    @using (Html.BeginForm("SparaProfil", "Profil", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {<h4>Förnamn</h4>
        @Html.TextBoxFor(x => x.Förnamn, new { @class = "form-control", @cols = "" })
        @Html.ValidationMessageFor(x => x.Förnamn, "", new { @class = "text-danger" })
        <h4>Efternamn</h4>
        @Html.TextBoxFor(x => x.Efternamn, new { @class = "form-control", @cols = "" })
        @Html.ValidationMessageFor(x => x.Efternamn, "", new { @class = "text-danger" })
        <h4>Roll</h4>
        @Html.TextBoxFor(x => x.Roll, new { @class = "form-control", @cols = "" })
        @Html.ValidationMessageFor(x => x.Roll, "", new { @class = "text-danger" })

        <div class="form-group">
            <input type="submit" value="Spara" class="btn btn-primary pull-right" />
            <div class="clearfix"></div>
        </div>
        <p class="text-success">@ViewBag.StatusMessage</p>
    }

    @{var adminStatus = Html.Action("ÄrAdmin", "Profil").ToString();
        if(adminStatus == "true")
        {
            <h2>Du är admin</h2>
        } else
        {
            <h2>Du är inte admin</h2>
        }
        }
    <div>
        @Html.ActionLink("Byt ditt lösenord", "ChangePassword")
    </div>





